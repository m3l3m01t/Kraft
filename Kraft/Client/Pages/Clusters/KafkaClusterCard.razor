<Card>
    <CardHeader>
        <CardTitle Size="4">Cluster @Cluster.Name</CardTitle>
    </CardHeader>
    <CardBody>
        <Field>
            <FieldLabel>Bootstrap Servers</FieldLabel>
            <FieldLabel>@Cluster.Brokers</FieldLabel>
        </Field>
        <Field>
            <FieldLabel>ZooKeeper Servers</FieldLabel>
            <FieldLabel>@Cluster.ZkServers</FieldLabel>
        </Field>
        <CardText>@Cluster.Description</CardText>
    </CardBody>
</Card>

@code {
    [Parameter]
    public Kraft.Shared.Cluster Cluster { get; set; }

}
